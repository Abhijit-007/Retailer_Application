<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOtp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/image_sendotp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/sendotpimage" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="OTP Verification" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Please enter OTP sent to you"
        android:textColor="@color/loginsendotpdescr"
        android:textSize="14sp"
        />

        <TextView
            android:id="@+id/loginsendotpdescr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:textColor="@color/loginsendotpdescr"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">

        <EditText
            android:id="@+id/inputotp1"
            android:background="@drawable/backgroundbox"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:maxLength="1"
            />
        <EditText
            android:id="@+id/inputotp2"
            android:background="@drawable/backgroundbox"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:maxLength="1"
            />

            <EditText
                android:id="@+id/inputotp3"
                android:background="@drawable/backgroundbox"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLength="1"
                />

            <EditText
                android:id="@+id/inputotp4"
                android:background="@drawable/backgroundbox"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLength="1"
                />

            <EditText
                android:id="@+id/inputotp5"
                android:background="@drawable/backgroundbox"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLength="1"
                />

            <EditText
                android:id="@+id/inputotp6"
                android:background="@drawable/backgroundbox"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLength="1"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't Receive the Otp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tesxtresendotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="Resend Otp again"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/submitotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_margin="30dp"
            android:textStyle="bold"/>

            <ProgressBar
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/progressbar_verify_otp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>
    </LinearLayout>


</ScrollView>
